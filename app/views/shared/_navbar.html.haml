.navbar
  = link_to "FarmerNews", root_path(), class: "root-text"
  |
  = link_to "news", news_index_path(), class: helper_active_link(news_index_path())
  |
  = link_to "comments", all_comments_path(), class: helper_active_link(all_comments_path())
  |
  = link_to "ask", questions_path(), class: helper_active_link(questions_path())
  |
  - if user_signed_in?
    = link_to "submit", new_submit_path(), class: helper_active_link(new_submit_path())
    .float-right
      = link_to current_user.username, user_path(current_user.id), class: helper_active_link(questions_path())
      |
      = link_to "logout", destroy_user_session_path(), method: :delete
  - else
    .float-right
      |
      = link_to "login", new_user_session_path()


